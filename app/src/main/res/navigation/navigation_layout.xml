<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_layout"
    app:startDestination="@id/loginF">

    <fragment
        android:id="@+id/loginF"
        android:name="com.raphaelbaron.shoestoreproject.LoginF"
        android:label="Login"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginF_to_welcomeF"
            app:destination="@id/welcomeF"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/welcomeF"
        android:name="com.raphaelbaron.shoestoreproject.WelcomeF"
        android:label="Welcome"
        tools:layout="@layout/welcome_fragment" >
        <action
            android:id="@+id/action_welcomeF_to_instructionsFragment"
            app:destination="@id/instructionsF" />
    </fragment>
    <fragment
        android:id="@+id/instructionsF"
        android:name="com.raphaelbaron.shoestoreproject.InstructionsFragment"
        android:label="Instructions"
        tools:layout="@layout/instructions_fragment" >
        <action
            android:id="@+id/action_instructionsF_to_inventoryF"
            app:destination="@id/inventoryF"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/inventoryF"
        android:name="com.raphaelbaron.shoestoreproject.shoeInventory.InventoryF"
        android:label="Shoe Inventory"
        tools:layout="@layout/inventory_fragment" >
        <action
            android:id="@+id/action_inventoryF_to_detailF"
            app:destination="@id/detailF" />
    </fragment>
    <fragment
        android:id="@+id/detailF"
        android:name="com.raphaelbaron.shoestoreproject.shoeInventory.DetailF"
        android:label="Shoe Details Page"
        tools:layout="@layout/detail_fragment" >
        <action
            android:id="@+id/action_detailF_to_inventoryF"
            app:destination="@id/inventoryF"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>